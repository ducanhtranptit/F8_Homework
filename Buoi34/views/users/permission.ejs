<h2>Phân quyền</h2>

<form action="" method="post">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th width="20%">Roles</th>
        <th>Quyền</th>
      </tr>
    </thead>
    <tbody>
      <% roles.forEach(({id, name}) => { %>
      <tr>
        <td>
          <div class="col">
            <label>
              <input type="checkbox" name="roles" value=<%= id %> <%= isRole(user.Roles, id) ? "checked" : "" %> />
            </label>
          </div>
        </td>
        <td>
         <%= name %>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <button class="btn btn-primary">Lưu thay đổi</button>
</form>