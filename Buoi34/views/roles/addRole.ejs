<h2>Thiết lập Role</h2>

<form action="" method="post">

  <input type="text", class="form-control mb-3" placeholder="Tên role..." name="name">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th width="20%">Module</th>
        <th>Quyền</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>Quản lý User</td>
        <td>
          <div class="row">
            <div class="col">
              <label>
                <input type="checkbox" name="permissions" value="read" />Xem
              </label>
            </div>
            <div class="col">
              <label>
                <input type="checkbox" name="permissions" value="add" />Thêm
              </label>
            </div>
            <div class="col">
              <label>
                <input type="checkbox" name="permissions" value="update" />Sửa
              </label>
            </div>
            <div class="col">
              <label>
                <input type="checkbox" name="permissions" value="delete" />Xóa
              </label>
            </div>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
  <button class="btn btn-primary">Lưu thay đổi</button>
</form>
