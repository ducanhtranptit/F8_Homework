<h3>Vào database check cũng được mà không cần gửi email đâu</h3>
<form action="" method="post">
  <div class="mb-3">
    <label for="">Email</label>
    <input
      type="text"
      name="email"
      class="form-control"
      placeholder="Nhập email gửi ..."
      required
    />
  </div>

  <% if(msg?.length) { %>
  <div class="alert alert-success text-center"><%= msg %></div>
  <% } %> <% if(warning?.length) { %>
  <div class="alert alert-danger text-center"><%= warning %></div>
  <% } %>

  <div class="d-grid">
    <button type="submit" class="btn btn-primary">Gửi</button>
  </div>
</form>
